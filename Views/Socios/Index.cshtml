@model Socio
@{
    ViewData["Title"] = "Index";
}

<h1 style="color:#4CAF50">Painel de Sócios</h1>
<head>
    <style>

        .SocioNavigation ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            width: auto;
            background-color: #f1f1f1;
            height: auto; /* tamanho automatico vertical */
            position: fixed; /* Make it stick, even on scroll */
            overflow: auto; /* Enable scrolling if the sidenav has too much content */
        }
        
            .SocioNavigation li a {
                display: block;
                color: #000;
                padding: 8px 16px;
                text-decoration: none;
            }
                .SocioNavigation li a:hover {
                    background-color: #4CAF50;
                    color: white;
                }

        .SocioNavigation active {
            
            background-color: #4CAF50;
            color: white;
        
                }
            
    </style>
</head>
<div class="SocioNavigation">
    <ul>
        <li><a href="Socios/ConsultarPlanoTreino">Consultar plano de treino</a></li>
        <li><a href="Socios/ConsultarHistoricoPeso">Consultar histórico de peso</a></li>
        <li><a href="Socios/ConsultarMapaAulas">Consultar mapa de aulas de grupo</a></li>
        <li><a href="Socios/HistoricoAulas">Histórico de aulas</a></li>

        @if (Model.NumProfessorNavigation != null)
        {
            <li><a href="Socios/ConsultarInfoPT">Consultar informação do meu personal trainer</a></li>

        }
        else
        {
            <li><a href="Socios/SolicitarPT">Solicitar personal trainer</a></li>
        }

    </ul>
</div>


