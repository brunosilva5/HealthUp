
@model IEnumerable<HealthUp.Models.Aula>

<style>
    * {
        box-sizing: border-box;
    }

    .column {
        float: left;
        width: 33.33%;
        padding: 5px;
    }

    /* Clearfix (clear floats) */
    .row::after {
        content: "";
        clear: both;
        display: table;
    }
</style>

@{
    ViewData["Title"] = "PlanoSemanal";
}

<h1>PlanoSemanal</h1>

<p>
    <h2>De @ViewBag.segunda até @ViewBag.domingo</h2>
</p>

<div class="row">
    <div class="column">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Segunda-Feira
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @if (item.DiaSemana == 1)
                        {
                            <td>
                                @Html.DisplayFor(modelItem => item.HoraInicio)
                               
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
