
@model IEnumerable<HealthUp.Models.Aula>

<style>
    * {
        box-sizing: border-box;
    }

    .column {
        float: left;
        width: 33.33%;
        padding: 5px;
    }

    /* Clearfix (clear floats) */
    .row::after {
        content: "";
        clear: both;
        display: table;
    }
</style>





<p>
    <h2>De @ViewBag.segunda até @ViewBag.domingo</h2>
</p>

