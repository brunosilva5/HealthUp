            <thead>
                <tr>
                    <th>
                        Segunda-Feira
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    @if (item.DiaSemana == 1)
                    {
                    <td>
                        @item.HoraInicio.ToString(@"hh\:mm")
                    </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
