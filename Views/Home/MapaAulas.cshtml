        <div class="row">
            <div class="col order-1">
                <div class="daily-routine">
                    <div class="week-name">
                        Segunda-Feira
                    </div>
                    <div class="daily-work">
                        @foreach (var item in Model)
                        {
                            var cont_H = 6;
                            if (item.GetDiaSemana() == "Segunda-Feira")
                            {
                                if (item.HoraInicio.Hours == cont_H)
                                {
                                    <div class="work-hours bg-color">
                                        <ul>
                                            <li>@item.Nome</li>
                                            <li>@item.HoraInicio</li>
                                        </ul>
                                    </div>
                                }
                                else
                                {
                                    <div class="work-hours"></div>
                                }
                                cont_H += 2;
                            }
                        }

                    </div>
                </div>
            </div>

