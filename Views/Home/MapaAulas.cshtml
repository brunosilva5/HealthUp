@model IEnumerable<HealthUp.Models.Aula>
@{
    ViewData["Title"] = "Mapa de Aulas";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<!--Calendário com foto de fundo-->
<div class="classes-time-section spad set-bg" data-setbg="img/classes-time-bg.jpg">
