@model HealthUp.Models.Aula

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Aula</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label name="NomeProfessor" class="control-label">Professor</label>
                <select name="NomeProfessor" class ="form-control" asp-items="ViewBag.NumProfessor"></select>
            </div>
            <div class="form-group">
                <label asp-for="ValidoDe" class="control-label"></label>
                <input asp-for="ValidoDe" class="form-control" />
                <span asp-validation-for="ValidoDe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValidoAte" class="control-label"></label>
                <input asp-for="ValidoAte" class="form-control" />
                <span asp-validation-for="ValidoAte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lotacao" class="control-label"></label>
                <input asp-for="Lotacao" class="form-control" />
                <span asp-validation-for="Lotacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label name="Hora" class="control-label">Hora de Início:</label>
                <input type="time" name="Hora" min="07:00" max="21:00" required>
            </div>
            <div class="form-group">
                <label name="DiaSemana" class="control-label">Dia da Semana</label>
                <select name="DiaSemana" class="form-control" asp-items="ViewBag.DiaSemana"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
