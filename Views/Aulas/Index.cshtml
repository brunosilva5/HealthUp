@model IEnumerable<HealthUp.Models.Aula>

@{
    ViewData["Title"] = "Index";
}

<h1>Aulas</h1>

<p>
    <a asp-action="Create">Criar nova</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ValidoDe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValidoAte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lotacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaSemana)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumAdminNavigation.NumAdminNavigation.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumProfessorNavigation.NumProfessorNavigation.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ValidoDe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValidoAte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lotacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaSemana)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumAdminNavigation.NumAdminNavigation.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumProfessorNavigation.NumProfessorNavigation.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAula">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAula">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
