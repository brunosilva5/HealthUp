
@{
    ViewData["Title"] = "Caixa de saída";
}


@{
    var text = "";
}

@if (ViewBag.Arquivadas == true)
{
    text = "Caixa de saída de mensagens arquivadas";
}
else
{
    text = "Caixa de saída";
}
<h1>@text</h1>


@if (HelperFunctions.IsCurrentUserProfessor(Context))
{
    text = "Enviar mensagens aos meus sócios";
}
@if (HelperFunctions.IsCurrentUserSocio(Context))
{
    text = "Enviar mensagem ao meu personal trainer";
}

<p>
    <a class="btn btn-outline-primary" asp-action="EnviarMensagem">@text</a>&nbsp;&nbsp;<a class="btn btn-outline-primary" asp-action="CaixaEntrada">Caixa de entrada</a>&nbsp;&nbsp;
    @if (ViewBag.Arquivadas != true)
    {
        <a class="btn btn-outline-primary" asp-action="VerMensagensSaidaArquivadas">Ver mensagens de saída arquivadas</a>
        <a class="btn btn-outline-primary" asp-action="ArquivarMensagensSaida">Arquivar mensagens saída</a>

    }
    else
    {
        <span>
            <a class="btn btn-outline-primary" asp-action="CaixaSaida">Caixa de saída</a>&nbsp;&nbsp;
        </span>
    }

</p>
<table class="content-table">
    <thead>
        <tr>

            <th>
                Para:
            </th>
            <th>
                Enviada a:
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdPessoaReceiverNavigation.Nome</td>

                <td>@item.DataEnvio</td>

                <td>
                    @if (ViewBag.Arquivadas == true)
                    {
                        @Html.ActionLink("Ver", "VerMensagem", new { IdMensagem = item.IdMensagem, arquivadas = true }, null)
                    }
                    else
                    {
                        @Html.ActionLink("Ver", "VerMensagem", new { IdMensagem = item.IdMensagem }, null)
                    }
                </td>

            </tr>
        }
    </tbody>
</table>