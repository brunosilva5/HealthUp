@model IEnumerable<HealthUp.Models.Aula>


<table class="content-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lotacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaSemana)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FotografiaDivulgacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lotacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraInicio.Hours):@Html.DisplayFor(modelItem => item.HoraInicio.Minutes)
            </td>
            <td>
                @if (item.DiaSemana == 1)
                {
                    <p>Segunda-feira</p>
                }
                else if (item.DiaSemana == 2)
                {
                    <p>Terça-feira</p>
                }
                else if (item.DiaSemana == 3)
                {
                    <p>Quarta-feira</p>
                }
                else if (item.DiaSemana == 4)
                {
                    <p>Quinta-feira</p>
                }
                else if (item.DiaSemana == 5)
                {
                    <p>Sexta-feira</p>
                }
                else if (item.DiaSemana == 6)
                {
                    <p>Sábado</p>
                }
                else if (item.DiaSemana == 7)
                {
                    <p>Domingo</p>
                }
            </td>
            <td>
                <img src="~/Ficheiros/@Html.DisplayFor(modelItem => item.FotografiaDivulgacao)" width="100" height="100"/>
            </td>
            <td>
                <a asp-action="ListSocios" asp-route-id="@item.IdAula">Sócios Inscritos</a> 
            </td>
        </tr>
}
    </tbody>
</table>
