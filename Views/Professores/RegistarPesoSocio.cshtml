@model HealthUp.Models.Socio

@{
    ViewData["Title"] = "Registar peso de sócio";
}

<h1>Registar peso de sócio</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegistarPesoSocio">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumSocioNavigation.Nome" class="control-label"></label>
                <select name="SocioEscolhido" class="form-control" style="width:auto" asp-items="@ViewBag.Socios"></select>
            </div>
            <div class="form-group">
                <label asp-for="Peso" class="control-label"></label>
                <input asp-for="Peso" required pattern="^\d*(\.\d{0,2})?$" class="form-control" />
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Registar peso" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar ao painel de professores</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
