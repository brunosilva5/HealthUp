@model HealthUp.Models.PlanoTreino

@{
    ViewData["Title"] = "Criar novo plano";
}

<h1>Criar novo plano</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumSocio" class="control-label"></label>
                <select asp-for="NumSocio" class ="form-control" asp-items="ViewBag.Socios"></select>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea name="Descricao" rows="5" cols="100" required style="resize:none"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar plano" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

