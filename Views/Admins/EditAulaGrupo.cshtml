@model HealthUp.Models.AulaGrupo

@{
    ViewData["Title"] = "EditAulaGrupo";
}

<h1>Editar Aula de Grupo</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditAulaGrupo" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAula" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FotografiaDivulgacao" class="control-label"></label>
                <input name="FotografiaDivulgacao" type="file" class="form-control" />
                <span asp-validation-for="FotografiaDivulgacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoDivulgacao" class="control-label"></label>
                <input name="VideoDivulgacao" type="file" class="form-control" />
                <span asp-validation-for="VideoDivulgacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListAulasGrupo">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
