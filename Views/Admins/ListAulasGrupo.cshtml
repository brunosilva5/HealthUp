@model IEnumerable<HealthUp.Models.AulaGrupo>

@{
    ViewData["Title"] = "Lista Aulas Grupo";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="container">
    <h1>Aulas de Grupo</h1>
    <table class="content-table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FotografiaDivulgacao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VideoDivulgacao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        <img src="~/Ficheiros/@Html.DisplayFor(modelItem => item.FotografiaDivulgacao)" height="200" />
                    </td>
                    <td>
                        <video width="320" height="240" controls>
                            <source src="~/Ficheiros/@Html.DisplayFor(modelItem => item.VideoDivulgacao)" type="video/mp4">
                        </video>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        <a asp-action="EditAulaGrupo" asp-route-id="@item.IdAula">Editar</a> |
                        <a asp-action="DeleteAulaGrupo" asp-route-id="@item.IdAula">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>