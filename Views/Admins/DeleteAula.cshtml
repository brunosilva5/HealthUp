@model HealthUp.Models.Aula

@{
    ViewData["Title"] = "Apagar Aula";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}


<div class="container">

    <h3>Tens a certeza que pretendes eliminar esta aula?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValidoDe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValidoDe)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValidoAte)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValidoAte)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lotacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lotacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HoraInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoraInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiaSemana)
        </dt>
        <dd class="col-sm-10">
            <td>
                @if (Model.DiaSemana == 1)
                {
                    <p>Segunda-feira</p>
                }
                else if (Model.DiaSemana == 2)
                {
                    <p>Terça-feira</p>
                }
                else if (Model.DiaSemana == 3)
                {
                    <p>Quarta-feira</p>
                }
                else if (Model.DiaSemana == 4)
                {
                    <p>Quinta-feira</p>
                }
                else if (Model.DiaSemana == 5)
                {
                    <p>Sexta-feira</p>
                }
                else if (Model.DiaSemana == 6)
                {
                    <p>Sábado</p>
                }
                else if (Model.DiaSemana == 7)
                {
                    <p>Domingo</p>
                }
            </td>
        </dd>
        <dt class="col-sm-2">
            Administrador
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumAdminNavigation.NumAdminNavigation.Nome)
        </dd>
        <dt class="col-sm-2">
            Professor
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Professor
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FotografiaDivulgacao)
        </dt>
        <dd class="col-sm-10">
            <img src="~/Ficheiros/@Html.DisplayFor(model=>model.FotografiaDivulgacao)" height="100" width="100" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VideoDivulgacao)
        </dt>
        <dd class="col-sm-10">
            <video width="320" height="240" controls>
                <source src="~/Ficheiros/@Html.DisplayFor(model => model.VideoDivulgacao)" type="video/mp4">
            </video>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>

    <form asp-action="DeleteAula">
        <input type="hidden" asp-for="IdAula" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="ListAulas">Back to List</a>
    </form>
</div>
